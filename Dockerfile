# STAGE 1: Build de l'application Angular
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM node:20-alpine AS builder

# DÃ©finir le rÃ©pertoire de travail
WORKDIR /app

# Copier les fichiers de dÃ©pendances
COPY package*.json ./

# Installer les dÃ©pendances
RUN npm ci --legacy-peer-deps

# Copier le code source
COPY . .

# Argument pour choisir l'environnement de build
ARG BUILD_CONFIGURATION=staging

# Build de l'application Angular
RUN npm run build:${BUILD_CONFIGURATION}

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# STAGE 2: Servir avec Nginx
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM nginx:alpine AS production

# Supprimer la configuration par dÃ©faut de nginx
RUN rm -rf /usr/share/nginx/html/*
RUN rm /etc/nginx/conf.d/default.conf

# Copier la configuration nginx personnalisÃ©e
COPY nginx/nginx.conf /etc/nginx/nginx.conf
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# Copier les fichiers buildÃ©s depuis le stage prÃ©cÃ©dent
COPY --from=builder /app/dist/garage-pneu/browser /usr/share/nginx/html

# Exposer le port 80
EXPOSE 80

# DÃ©marrer nginx
CMD ["nginx", "-g", "daemon off;"]
